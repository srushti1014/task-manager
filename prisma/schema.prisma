generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id            String    @id @default(uuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]

  tasks       Task[]     @relation("TaskOwner") // tasks this user owns
  taskMembers TaskUser[] // tasks this user collaborates on

  categories   Category[]
  tags         Tag[]
  TaskTag      TaskTag[]
  TaskCategory TaskCategory[]
}

model Category {
  id        String   @id @default(cuid())
  name      String
  color     String   @default("#3B82F6")
  userId    String
  createdAt DateTime @default(now())

  user         User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks        Task[] // tasks user categorized
  TaskCategory TaskCategory[]

  @@unique([name, userId])
}

model Tag {
  id        String   @id @default(cuid())
  name      String
  color     String   @default("#10B981")
  createdAt DateTime @default(now())
  userId    String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  tasks TaskTag[]

  @@unique([name, userId])
}

model Task {
  id          String    @id @default(uuid())
  title       String
  description String?
  dueDate     DateTime?
  priority    Priority  @default(MEDIUM)
  status      Status    @default(PENDING)
  completedAt DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation("TaskOwner", fields: [userId], references: [id])

  // Collaborators
  collaborators TaskUser[]

  // Personal organization (each user can tag/categorize separately)
  taskTags       TaskTag[]
  taskCategories TaskCategory[]
  categoryId     String?
  Category       Category?      @relation(fields: [categoryId], references: [id])
}

model TaskUser {
  id     String           @id @default(cuid())
  taskId String
  userId String
  role   CollaboratorRole @default(VIEWER)

  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([taskId, userId])
}

model TaskTag {
  id        String   @id @default(cuid())
  taskId    String
  tagId     String
  userId    String // who applied the tag
  createdAt DateTime @default(now())

  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)
  tag  Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([taskId, tagId, userId])
}

model TaskCategory {
  id         String   @id @default(cuid())
  taskId     String
  categoryId String
  userId     String // who applied the category
  createdAt  DateTime @default(now())

  task     Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  category Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([taskId, categoryId, userId])
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

enum Status {
  PENDING
  IN_PROGRESS
  COMPLETED
}

enum CollaboratorRole {
  OWNER
  EDITOR
  VIEWER
}



